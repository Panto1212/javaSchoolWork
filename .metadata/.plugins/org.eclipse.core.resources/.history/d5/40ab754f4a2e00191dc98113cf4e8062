package name;
import java.util.*;




public class Average {
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("Enter two numbers;");
		Scanner s = new Scanner(System.in);
		
		double num1, num2;
		double avg=0;
		num1 = s.nextDouble();
		num2 = s.nextDouble();
		avg= (num1+num2)/2;
		System.out.println("The average is "+ avg);
		
		if (num1<avg) {
			System.out.println("The first number you entered is greater than the average");
		}
		else {
			System.out.println("The second number you entered could be greater than the average");
		}
s.close();
	}

}
